<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="175pt"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="90pt"
                        android:layout_marginLeft="5pt"
                        android:layout_marginTop="5pt"
                        android:layout_marginRight="5pt"
                        android:paddingTop="5pt"
                        android:paddingBottom="5pt"
                        android:text="This application enables you to calculate the nearest result of zero for a function of the seventh degree in the figure below so that you can determine to any value can reach the function (Epc) between the limits (a) and (b) so that the value of the function of one positive and the other negative"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5pt"
                            android:layout_weight="1"
                            app:srcCompat="@mipmap/fxa" />

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="5pt"
                            android:layout_weight="1"
                            app:srcCompat="@mipmap/fxb" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5pt"
                        android:layout_marginRight="5pt"
                        android:text="Enter the function parameters f(x) :"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5pt"
                        android:layout_marginRight="5pt"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5pt"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="f(x)= "
                            android:textColor="#000000"
                            android:textSize="24sp" />

                        <EditText
                            android:id="@+id/Eda"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="2"
                            android:hint="A"
                            android:inputType="textPersonName"
                            android:selectAllOnFocus="true"
                            android:text="0"
                            android:textSize="24sp" />

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="38dp"
                            android:layout_height="27dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            app:srcCompat="@mipmap/xa" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0"
                            android:gravity="center"
                            android:text=" +"
                            android:textColor="#000000"
                            android:textSize="30sp" />

                        <EditText
                            android:id="@+id/Edb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="2"
                            android:hint="B"
                            android:inputType="textPersonName"
                            android:selectAllOnFocus="true"
                            android:text="0"
                            android:textSize="24sp" />

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="40dp"
                            android:layout_height="27dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            app:srcCompat="@mipmap/xb" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0"
                            android:gravity="center"
                            android:text=" +"
                            android:textColor="#000000"
                            android:textSize="30sp" />

                        <EditText
                            android:id="@+id/Edc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="2"
                            android:hint="C"
                            android:inputType="textPersonName"
                            android:selectAllOnFocus="true"
                            android:text="0"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="#000000"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="40dp"
                            android:layout_height="27dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="5pt"
                            android:layout_weight="1"
                            app:srcCompat="@mipmap/xc" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5pt"
                        android:layout_marginRight="5pt"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5pt"
                            android:layout_weight="0"
                            android:gravity="center"
                            android:text="       +"
                            android:textColor="#000000"
                            android:textSize="30sp" />

                        <EditText
                            android:id="@+id/Edd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="2"
                            android:hint="D"
                            android:inputType="textPersonName"
                            android:selectAllOnFocus="true"
                            android:text="0"
                            android:textSize="24sp" />

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="35dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            app:srcCompat="@mipmap/xd" />

                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="0pt"
                            android:layout_weight="0"
                            android:gravity="center"
                            android:text=" +"
                            android:textColor="#000000"
                            android:textSize="30sp" />

                        <EditText
                            android:id="@+id/Ede"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="2"
                            android:hint="E"
                            android:inputType="textPersonName"
                            android:selectAllOnFocus="true"
                            android:text="0"
                            android:textSize="24sp" />

                        <ImageView
                            android:id="@+id/imageView7"
                            android:layout_width="35dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            app:srcCompat="@mipmap/xe" />

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0"
                            android:gravity="center"
                            android:text=" +"
                            android:textColor="#000000"
                            android:textSize="30sp" />

                        <EditText
                            android:id="@+id/Edf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="2"
                            android:hint="F"
                            android:inputType="textPersonName"
                            android:selectAllOnFocus="true"
                            android:text="0"
                            android:textSize="24sp" />

                        <ImageView
                            android:id="@+id/imageView8"
                            android:layout_width="35dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="5pt"
                            android:layout_weight="1"
                            app:srcCompat="@mipmap/xf" />

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="#000000"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5pt"
                        android:layout_marginRight="5pt"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView17"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5pt"
                            android:layout_weight="0"
                            android:gravity="center"
                            android:text="       +"
                            android:textColor="#000000"
                            android:textSize="30sp" />

                        <EditText
                            android:id="@+id/Edg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:ems="2"
                            android:hint="G"
                            android:inputType="textPersonName"
                            android:selectAllOnFocus="true"
                            android:text="0"
                            android:textSize="24sp" />

                        <ImageView
                            android:id="@+id/imageView9"
                            android:layout_width="32dp"
                            android:layout_height="22dp"
                            android:layout_gravity="center"
                            android:layout_weight="0"
                            app:srcCompat="@mipmap/xg" />

                        <TextView
                            android:id="@+id/textView16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0"
                            android:gravity="center"
                            android:text=" +"
                            android:textColor="#000000"
                            android:textSize="30sp" />

                        <EditText
                            android:id="@+id/Edi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5pt"
                            android:layout_weight="0"
                            android:ems="2"
                            android:hint="H"
                            android:inputType="textPersonName"
                            android:selectAllOnFocus="true"
                            android:text="0"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/textView15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="#000000"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="match_parent"
                        android:layout_height="30pt"
                        android:layout_marginLeft="5pt"
                        android:layout_marginTop="10pt"
                        android:layout_marginRight="5pt"
                        android:text="Enter the border a , b and Epc (The smallest value of a function f(x))"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView22"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5pt"
                            android:layout_marginTop="0pt"
                            android:layout_weight="0"
                            android:text="a ="
                            android:textColor="#000000"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/bora"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:ems="3"
                            android:hint="a"
                            android:inputType="textPersonName"
                            android:selectAllOnFocus="true"
                            android:text="0" />

                        <TextView
                            android:id="@+id/textView21"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3pt"
                            android:layout_marginTop="0pt"
                            android:layout_weight="0"
                            android:text="    b ="
                            android:textColor="#000000"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/borb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:ems="3"
                            android:hint="a"
                            android:inputType="textPersonName"
                            android:selectAllOnFocus="true"
                            android:text="0" />

                        <TextView
                            android:id="@+id/textView25"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3pt"
                            android:layout_marginTop="0pt"
                            android:layout_weight="0"
                            android:text="    Epc ="
                            android:textColor="#000000"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/edEpc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5pt"
                            android:layout_weight="0"
                            android:ems="3"
                            android:hint="Epc"
                            android:inputType="numberDecimal"
                            android:text="0.001" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/resultat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5pt"
                            android:layout_marginTop="10pt"
                            android:layout_marginRight="5pt"
                            android:text="Click on Find Solution to give the result"
                            android:textColor="#000000"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="20pt"
                            android:layout_marginBottom="30pt"
                            android:background="@drawable/bubackgrend"
                            android:gravity="center"
                            android:shadowColor="#000000"
                            android:text="  Solution  "
                            android:textColor="#FDFCFBFB"
                            android:textSize="24sp" />
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
           </HorizontalScrollView>
        </LinearLayout>